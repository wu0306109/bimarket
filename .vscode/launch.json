{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: debug dev-no-turbopack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev-no-turbopack"],
      "skipFiles": ["<node_internals>/**"],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "name": "Docker: run",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run",
      "platform": "node"
    },
    {
      "name": "Storybook: launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/storybook",
      "args": ["dev", "-p", "6006"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
  ]
}
