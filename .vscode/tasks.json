{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "dockerBuild": {
        "tag": "bimarket",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "image": "bimarket",
        "tag": "bimarket",
        "ports": [
          {
            "containerPort": 3000,
            "hostPort": 3000
          }
        ]
      }
    }
  ]
}
